@page "/"
@page "/login"
@layout AuditoriaBbraun.BlazorWeb.Components.Layout.LoginLayout

@using AuditoriaBbraun.Application.DTOs.Account
@using AuditoriaBbraun.BlazorWeb.Services.Authentication
@using System.ComponentModel.DataAnnotations

@inject IAuthClientService AuthService
@inject NavigationManager Nav

<PageTitle>Iniciar sesión</PageTitle>

<section class="login-shell">
    <div class="login-card">
        <header class="login-header">
            <div class="login-brand">
                <div class="login-brand-text">
                    <p class="eyebrow">BBraun · DWS</p>
                    <h1>Acceso seguro</h1>
                    <p class="muted">Autentícate con tu usuario y contraseña asignados.</p>
                </div>
            </div>
        </header>

        <EditForm Model="_model" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" />
            <div class="form-grid">
                <div>
                    <label for="username" class="form-label">Usuario</label>
                    <InputText id="username" class="form-control" @bind-Value="_model.UserName" />
                    <ValidationMessage For="@(() => _model.UserName)" class="text-danger" />
                </div>
                <div>
                    <label for="password" class="form-label">Contraseña</label>
                    <InputText id="password"
                               class="form-control"
                               type="password"
                               @bind-Value="_model.Password" />
                    <ValidationMessage For="@(() => _model.Password)" class="text-danger" />
                </div>
            </div>

            <div class="login-actions">
                <button class="btn btn-primary" type="submit" disabled="@_loading">
                    @_loginButtonText
                </button>
                @if (!string.IsNullOrWhiteSpace(_statusMessage))
                {
                    <span class="@_statusClass">@_statusMessage</span>
                }
            </div>
        </EditForm>
    </div>
</section>

@code {
    private readonly LoginRequest _model = new();

    private bool _loading;
    private string? _statusMessage;
    private string _statusClass = "text-muted";
    private string _loginButtonText => _loading ? "Verificando..." : "Iniciar sesión";

    private async Task HandleLogin()
    {
        _loading = true;
        _statusMessage = null;
        _statusClass = "text-muted";

        try
        {
            // Servicio de Autenticación
            var response = await AuthService.Login(_model);

            if (response.Success)
            {
                Nav.NavigateTo("home", forceLoad: false);
            }
            else
            {
                _statusMessage = response.Message ?? "Usuario o contraseña inválidos.";
                _statusClass = "text-danger";
            }
        }
        catch (Exception)
        {
            _statusMessage = "No se pudo conectar con el servidor.";
            _statusClass = "text-danger";
        }
        finally
        {
            _loading = false;
        }
    }
}